{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "charset": "utf8",
    "outDir": "./dist/",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "assets",
    "dist",
    "node_modules",
    ".idea",
    ".git"
  ]
}
