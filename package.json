{
  "name": "react-demo-social",
  "version": "0.0.1",
  "description": "A demo application for Social Shares and Widgets.",
  "keywords": [
    "react",
    "demo",
    "social",
    "share",
    "widget"
  ],
  "homepage": "https://mornya.github.io/react-demo-social",
  "license": "MIT",
  "author": "mornya <mornya78@gmail.com>",
  "private": true,
  "repository": "https://github.com/mornya/react-demo-social.git",
  "bugs": "https://github.com/mornya/react-demo-social/issues",
  "scripts": {
    "login": "react-vessel login",
    "lint": "react-vessel lint",
    "clean": "react-vessel clean",
    "build": "react-vessel build",
    "start": "react-vessel start",
    "test": "react-vessel test",
    "analyze": "react-vessel analyze",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "dependencies": {
    "@mornya/react-helper": "latest",
    "@mornya/react-social-libs": "^2.0.4",
    "classnames": "latest",
    "immer": "latest",
    "normalize.css": "latest",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.2",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/jest-diff": "latest",
    "@types/node": "^11.13.4",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.6",
    "@types/react-router-dom": "^4.3.2",
    "gh-pages": "^2.0.1",
    "jest": "^24.7.1",
    "jest-transform-file": "^1.1.1",
    "prop-types": "^15.7.2",
    "ts-jest": "latest",
    "tslint": "^5.16.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "proxy": {
    "/mock/": {
      "target": "http://localhost:8080",
      "pathRewrite": {
        "^/mock/": ""
      },
      "secure": false,
      "changeOrigin": false,
      "ws": false,
      "xfwd": true
    }
  },
  "eslintConfig": {
    "root": false,
    "env": {
      "node": true
    }
  },
  "jest": {
    "transform": {
      ".[t|j]sx?$": "ts-jest",
      ".(bmp|gif|jpg|jpeg|png|svg|webp)$": "jest-transform-file"
    },
    "testRegex": "\\.test\\.[t|j]sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
